<ul class="breadcrumb">
    <li><a ui-sref="index">Home</a> <span class="divider">/</span></li>
    <li><a ui-sref="admin.index">Admin</a> <span class="divider">/</span></li>
    <li><a ui-sref="admin.posts">Posts</a><span class="divider">/</span></li>
    <li class="active">Details of post</li>
</ul>

<div class="page-header">
    <h1>Details of post</h1>
</div>

<table class="table table-bordered">
    <tbody>
        <tr><th>Title</th><td>{{ item.title }}</td></tr>

        <tr><th>Post</th><td>{{ item.post }}</td></tr>

        <tr><th>User</th><td>{{ item.user_id }}</td></tr>

    </tbody>
</table>

<div class="well">
    <a ui-sref="admin.postsEdit({id: item.id})" class="btn btn-mini"><i class="icon-edit"></i> Edit</a>
    <a href="" class="btn btn-mini btn-danger" ng-click="delete(item.id, 'posts')">
        <i class="icon-remove icon-white"></i> Delete</a>
    or
    <a ui-sref="admin.posts">Back to index</a>
</div>
